---
interface Props {
    title: string;
    children: any;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='generator' content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style lang='scss'>
    @use 'webcoreui/styles' as *;
    @include setup(
        (
            // define the font paths for webcoreui components
            fontBold: '/fonts/ESNein/ESNein800.woff2',
            fontRegular: '/fonts/ESAllianz/ESAllianz300.woff2',

            // define which styles you'd like to include
            includeResets: true,
            includeUtilities: true,
            includeTooltip: true,
            includeScrollbarStyles: true,
            theme: 'light'
        )
    );

    html,
    body {
        --w-sm-radius: 2px;
        --w-md-radius: 5px;
        --w-lg-radius: 10px;
        --w-xl-radius: 15px;
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
